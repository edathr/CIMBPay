<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterGesture">

    <ImageView
        android:id="@+id/reggestureheader"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/regheader" />

    <ImageView
        android:id="@+id/reggesturetext"
        android:layout_width="221dp"
        android:layout_height="55dp"
        android:layout_below="@+id/reggestureheader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:background="@drawable/reggesturetext" />

    <ImageView
        android:id="@+id/registergesturepic"
        android:layout_width="161dp"
        android:layout_height="197dp"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="300dp"
        android:background="@drawable/fingerdraw" />

    <Button
        android:id="@+id/registerRegButton"
        android:layout_width="237dp"
        android:layout_height="43dp"
        android:layout_below="@+id/reggesturetext"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="360dp"
        android:background="@drawable/regbutton"
        android:text="Next"
        android:textColor="@android:color/white"
        android:textSize="18dp" />

    <Button
        android:id="@+id/exitRegButton"
        android:layout_width="134dp"
        android:layout_height="42dp"
        android:layout_below="@+id/reggesturetext"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/exitbutton"
        android:nextFocusLeft="@id/registerRegButton"
        android:text="Back"
        android:textColor="@android:color/white"
        android:textSize="18dp" />

</RelativeLayout>